@{
    ViewData["Title"] = "Login";
}
<!--model Minuscula llamo al Modelo Que deseo-->
@model LoginViewModels
<!--Centramos-->
<center>
    <!--clase que contenga-->
    <div class="container">
    <!--le damos una clase cars-->
            <div class="ro">
                <div class="col-md-11">
                    <div class="card">
                        <div class="card-content">
                            <h4>Iniciar Sesion</h4>
                            <hr />
                            <section>
                                <form asp-controller="Home" asp-action="Index" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="input-field col s12">
                                        <!--El Campo del Email es buscado en los modelos en la propiedad LoginViewModels-->
                                        <label asp-for="input.Email"></label>
                                        <!--es campo Texto y validamo en los modelos que sea dicho campo-->
                                        <input asp-for="input.Email" class="form-control" />
                                        <!--Validamos el Correo Eletronico ubicando en mi clase modelo el email -->
                                        <span asp-validation-for="input.Email" class="text-danger"> </span>
                                    </div>
                                    <div class="input-field col s12" >
                                        <!--El Campo del Password es buscado en los modelos en la propiedad LoginViewModels-->
                                        <label asp-for="input.Password"></label>
                                        <!--es campo Texto y validamo en los modelos que sea dicho campo-->
                                        <input asp-for="input.Password" class="form-control" />
                                        <!--Validamos la contrase  ubicando en mi clase modelo el email -->
                                        <span asp-validation-for="input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-default">Iniciar Sesion</button>
                                    </div>
                                </form>
                            </section>
                            <label id="indexMessaje" class="error">@Html.DisplayFor(m => m.ErrorMessaje)</label>
                        </div>
                        
                    </div>
                </div>
            </div>
        
    </div>
</center>
@section Scripts{ 
    @await Html.PartialAsync("_ValidationScriptsPartial");
}


